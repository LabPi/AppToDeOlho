<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:background="#d6d6d6">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:id="@+id/person_photo"
                android:src="@mipmap/img01"
                android:layout_below="@+id/txvUsuario"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txvDescricao"
                android:text="Contribua para as vítimas do rompimento das barragens de Mariana,  uma das maiores tragédias ambientais do país. Ajude a minimizar o sofrimento causado por essa catástrofe."
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/imgCurtir"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imgCurtir"
                android:src="@mipmap/ic_curtir"
                android:layout_below="@+id/person_photo"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/imgCurtir"
                android:layout_toLeftOf="@+id/imageView6"
                android:layout_toRightOf="@+id/imgCurtir"
                android:layout_toEndOf="@+id/imgCurtir"
                android:weightSum="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="983"
                    android:id="@+id/textView2"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView5"
                    android:src="@mipmap/ic_ncurtir"
                    android:layout_above="@+id/txvDescricao"
                    android:layout_toRightOf="@+id/txvUsuario"
                    android:layout_toEndOf="@+id/txvUsuario" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:id="@+id/textView14"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Mariana"
                android:id="@+id/txvUsuario"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorAccent"/>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:id="@+id/imageView6"
                android:src="@mipmap/ic_participar"
                android:layout_above="@+id/txvDescricao"
                android:layout_alignRight="@+id/txvDescricao"
                android:layout_alignEnd="@+id/txvDescricao" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
