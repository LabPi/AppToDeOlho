<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#d6d6d6">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp">

        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardView">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="11dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:id="@+id/person_photo"
                    android:src="@mipmap/img01"
                    android:layout_below="@+id/imageView2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignRight="@+id/imageView6"
                    android:layout_alignEnd="@+id/imageView6" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_alignBottom="@+id/imgCurtir"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txvDescricao"
                    android:text="Ponte que fará a ligação entre os estados do Maranhão e Tocantins, facilitando o trânsito entre a população e dessa forma diminuindo o tempo de viagem"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/imgCurtir"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Ponte Sobre o Rio Tocantins"
                    android:id="@+id/txvUsuario"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/colorAccent"/>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView6"
                    android:src="@mipmap/ic_participar"
                    android:layout_above="@+id/txvDescricao"
                    android:layout_alignRight="@+id/txvDescricao"
                    android:layout_alignEnd="@+id/txvDescricao" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imgCurtir"
                    android:src="@mipmap/ic_curtir"
                    android:layout_below="@+id/person_photo"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/imgCurtir"
                    android:layout_toLeftOf="@+id/imageView6"
                    android:layout_toRightOf="@+id/imgCurtir"
                    android:layout_toEndOf="@+id/imgCurtir"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="983"
                        android:id="@+id/textView2"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imgnCurtir"
                        android:src="@mipmap/ic_ncurtir"
                        android:layout_alignTop="@+id/imgCurtir"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="9"
                        android:id="@+id/textView12"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/imageView6"
                    android:layout_toRightOf="@+id/textView6"
                    android:layout_toEndOf="@+id/textView6">

                </LinearLayout>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbarStyle="insideOverlay"
                    android:id="@+id/progressBar"
                    android:layout_below="@+id/imgParticipantes"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_time"
                    android:id="@+id/imgParticipantes"
                    android:layout_below="@+id/txvDescricao"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_above="@+id/progressBar"
                    android:layout_toRightOf="@+id/imgParticipantes"
                    android:id="@+id/linearLayout2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="350 dias"
                        android:id="@+id/textView3"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/imageView2"
                    android:src="@mipmap/ic_localizacao"
                    android:layout_below="@+id/txvUsuario"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Imperatriz - MA, Setor Beira Rio"
                    android:id="@+id/textView4"
                    android:layout_above="@+id/person_photo"
                    android:layout_toRightOf="@+id/imageView2"
                    android:layout_toEndOf="@+id/imageView2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="700 dias"
                    android:id="@+id/textView5"
                    android:layout_below="@+id/progressBar"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Tempo Previsto"
                    android:id="@+id/textView6"
                    android:layout_below="@+id/progressBar"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_dinheiro"
                    android:id="@+id/imageView9"
                    android:layout_below="@+id/textView6"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbarStyle="insideOverlay"
                    android:id="@+id/progressBar2"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imageView9"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Orçamento"
                    android:id="@+id/textView7"
                    android:layout_alignTop="@+id/textView8"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="R$ 10.600.000,00"
                    android:id="@+id/textView8"
                    android:layout_below="@+id/progressBar2"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_above="@+id/progressBar2"
                    android:layout_alignLeft="@+id/linearLayout2"
                    android:layout_alignStart="@+id/linearLayout2"
                    android:id="@+id/linearLayout3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R$ 5.300.000,00 gastos"
                        android:id="@+id/textView9"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="40%"
                    android:id="@+id/textView10"
                    android:layout_above="@+id/progressBar"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="50%"
                    android:id="@+id/textView11"
                    android:layout_above="@+id/progressBar2"
                    android:layout_alignRight="@+id/textView5"
                    android:layout_alignEnd="@+id/textView5" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Ver Denúncias"
                    android:id="@+id/btnverdenuncia"
                    android:background="@color/colorAccent"
                    android:textColor="#fff"
                    android:layout_below="@+id/textView13"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignRight="@+id/btnDenuncia"
                    android:layout_alignEnd="@+id/btnDenuncia"
                    android:layout_marginTop="15dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Denunciar"
                    android:id="@+id/btnDenuncia"
                    android:background="@color/colorAccent"
                    android:textColor="#fff"
                    android:layout_below="@+id/btnverdenuncia"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_empresa"
                    android:id="@+id/imageView10"
                    android:layout_below="@+id/textView7"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EMPRESA: JSL Empreendimentos LTDA"
                    android:id="@+id/textView13"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_alignTop="@+id/imageView10"
                    android:layout_toRightOf="@+id/imageView10"
                    android:layout_toEndOf="@+id/imageView10"
                    android:paddingTop="10dp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
